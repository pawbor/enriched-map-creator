{
  "root": true,
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jasmine": true
  },
  "rules": {
    "no-console": "warn",
    "quotes": ["warn", "single"],
    "semi": "error",
    "no-use-before-define": ["error", "nofunc"]
  }
}
